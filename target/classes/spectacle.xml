<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<!-- scope "prototype" dublique le bean Ã  chaque injection -->
	<bean id="saxophone" class="com.gtm.DemoSpring2.Saxophone" scope="prototype" />
	<bean id="violon" class="com.gtm.DemoSpring2.Violon" primary="true"/>
	<bean id="guitare" class="com.gtm.DemoSpring2.Guitare" />

	<bean name="Olivier" class="com.gtm.DemoSpring2.Musicien">
		<property name="instrument" ref="saxophone" />
		<property name="morceau" value="Vive le vent..." />
	</bean>
	<bean name="Caroline" class="com.gtm.DemoSpring2.Musicien">
		<property name="instrument" ref="violon" />
	</bean>
	<bean name="Jean-Marc" class="com.gtm.DemoSpring2.Musicien">
		<property name="instrument" ref="saxophone" />
	</bean>
	<!-- Julien joue de 2 saxophones avec <list> (accepte les doublons) -->
	<bean name="Julien" class="com.gtm.DemoSpring2.MusicienMultiInstrumentiste">
		<property name="instruments">
			<list>
				<ref bean="saxophone" />
				<ref bean="saxophone" />
				<ref bean="guitare" />
				<ref bean="violon" />
			</list>
		</property>
	</bean>
	<!-- Alain joue de 2 saxophones avec <set> (pas de doublon) -->
	<bean name="Alain" class="com.gtm.DemoSpring2.MusicienMultiInstrumentiste">
		<property name="instruments">
			<set>
				<ref bean="saxophone" />
				<ref bean="saxophone" />
				<ref bean="guitare" />
				<ref bean="violon" />
			</set>
		</property>
	</bean>
	<!-- Louis joue le meme morceau qu'Olivier -->
	<bean name="Louis" class="com.gtm.DemoSpring2.Musicien">
		<property name="morceau" value="#{Olivier.morceau}" />
		<property name="instrument" ref="guitare"/>
	</bean>
	<!-- exemple d'auto-wiring by name -->
	<bean id="instrument" class="com.gtm.DemoSpring2.Saxophone" />
	
	<bean name="Michel" class="com.gtm.DemoSpring2.Musicien" autowire="byName">
		<property name="morceau" value="Petit ours brun"/>
	</bean>
	<!-- exemple d'auto-wiring par type -->
	<bean name="Maurice" class="com.gtm.DemoSpring2.Musicien" autowire="byType">
		<property name="morceau" value="Petit ours brun"/>
	</bean>
</beans>
